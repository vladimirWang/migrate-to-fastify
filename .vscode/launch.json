{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "envFile": "${workspaceFolder}/.env.development",
            "console": "integratedTerminal"
        }
    ]
}